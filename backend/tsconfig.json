{  
  "compilerOptions": {  
    "target": "es6",  
    "module": "commonjs",  
    "rootDir": "src",  
    "outDir": "dist",  
    "sourceMap": true,  
    "resolveJsonModule": true,  
    "lib": ["es6", "dom"],  
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@projectInterfaces/*": ["./src/types/interfaces/*"],
      "@projectEnums/*": ["./src/types/enums/*"],
    }
  },  
  "include": [  
    "src/**/*.ts",
  ],  
  "exclude": [  
    "node_modules",
  ],
}
